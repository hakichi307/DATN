@model GVNClone.QuaTang

@{
    ViewBag.Title = "AddPresent";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}
<link href="~/Content/AdminLayout/assets/vendors/chosen_v1.8.7/chosen.min.css" rel="stylesheet" />

<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">Thêm quà tặng cho sản phẩm</div>
        <div class="ibox-tools">
            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
        </div>
    </div>
    @using (Html.BeginForm("AddPresent", "Admin", FormMethod.Post, new { @id = "form-sample-1", @class = "form-horizontal" }))
    {
        <div class="ibox-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tên quà tặng</label>
                <div class="col-sm-10">
                    @Html.TextBox("TenQT", "", new { @class = "form-control" })
                    <label class="help-block error">@ViewBag.Exist</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Giá</label>
                <div class="col-sm-10">
                    @Html.TextBox("DonGia", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Dành cho sản phẩm</label>
                <div class="col-sm-10">
                    @Html.DropDownList("MaSP", null, new { @class = "form-control "})
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 ml-sm-auto">
                    <button class="btn btn-info px-4" type="submit" style="cursor:pointer">Thêm</button>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Content/AdminLayout/assets/vendors/chosen_v1.8.7/chosen.jquery.min.js"></script>

<script>
    $("#MaSP").chosen();
</script>

