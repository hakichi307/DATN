@model IEnumerable<GVNClone.ChiTietDonDatHang>

<table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Ngày đặt</th>
            <th>Tên khách hàng</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Trạng thái</th>
            <th>Tổng doanh thu</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Ngày đặt</th>
            <th>Tên khách hàng</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Trạng thái</th>
            <th>Tổng doanh thu</th>
        </tr>
        <tr class="text-right">
            <td colspan="7" class="text-right font-17">Tổng doanh thu tháng:<span class="text-danger font-weight-bold"> @String.Format("{0:0,0}", ViewBag.GetResult) VNĐ</span></td>
        </tr>
    </tfoot>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr class="text-center">
                <td colspan="7"><img src="~/Images/disappointed.png" height="310" /></td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDDH</td>
                    <td>@Html.FormatValue(item.DonDatHang.NgayDat, "{0:dd/MM/yyyy}")</td>
                    <td>@item.DonDatHang.KhachHang.HoTen</td>
                    <td>@item.SoLuong</td>
                    <td>@String.Format("{0:0,0}", item.DonGia)</td>
                    <td><span class="badge badge-success">Shipped</span></td>
                    <td>@String.Format("{0:0,0}", (item.SoLuong * item.DonGia)) VNĐ</td>
                </tr>
            }
        }
    </tbody>
</table>

