@model IEnumerable<ChienThangComputer.QuaTang>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Mã quà tặng</th>
            <th>Tên quà tặng</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr class="text-center">
                <td colspan="4">Không có quà tặng để hiển thị</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaQT</td>
                    <td>@item.TenQT</td>
                    <td>@String.Format("{0:0,0}", item.DonGia)</td>
                    <td><button type="submit" class="btn btn-danger btn-delete-present" style="cursor: pointer" data-id="@item.MaQT">Xoá</button></td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $(".btn-delete-present").click(function () {
        var getID = $(this).data("id");
        console.log(getID);
        $.ajax({
            type: 'POST',
            url: '/Admin/DeletePresent',
            data: { id: getID },
            success: function (res) {
                if (res.statusCode === 404) {
                    Swal.fire({
                        text: res.message,
                        icon: 'error'
                    })
                    console.log(res.message);
                } else {
                    Swal.fire({
                        text: res.message,
                        icon: 'success'
                    }).then(function () {
                        window.location.reload();
                    })
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log(jqXHR.responseText);
                console.log(errorThrown);
            }
        })
    })
</script>

