@model ChienThangComputer.ThanhVien

@using CaptchaMvc;
@using CaptchaMvc.HtmlHelpers;

@{
    ViewBag.Title = "EditMember";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">Sửa thông tin thành viên</div>
        <div class="ibox-tools">
            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
        </div>
    </div>
    @using (Html.BeginForm("EditMember", "Admin", FormMethod.Post, new { @id = "form-sample-1", @class = "form-horizontal" }))
    {
        <div class="ibox-body">
            @Html.HiddenFor(model => model.MaTV)
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tên hiển thị</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mật khẩu</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Họ tên</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Địa chỉ</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Số điện thoại</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Loại thành viên</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.MaLoaiTV, null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Captcha</label>
                <div class="col-sm-10">
                    @Html.MathCaptcha()
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 ml-sm-auto">
                    <button class="btn btn-info px-4 btn-edit-member" type="submit" style="cursor:pointer">Xác nhận</button>
                </div>
            </div>
        </div>
    }
</div>
