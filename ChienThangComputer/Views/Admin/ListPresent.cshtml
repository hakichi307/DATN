@model IEnumerable<ChienThangComputer.QuaTang>
@{
    ViewBag.Title = "ListPresent";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<h2>Danh sách Quà Tặng</h2>

@if (!Model.Any())  // Kiểm tra nếu không có dữ liệu
{
    <div class="alert alert-info">
        Không có quà tặng nào được tìm thấy.
    </div>
}
else
{
    <!-- Bảng có ID để DataTables có thể hoạt động -->
    <table id="giftTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Mã Quà Tặng</th>
                <th>Tên Quà Tặng</th>
                <th>Đơn Giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gift in Model)  // Lặp qua tất cả các quà tặng
            {
                <tr>
                    <td>@gift.MaQT</td>
                    <td>@gift.TenQT</td>
                    <td>@String.Format("{0:0,0}", gift.DonGia) đ</td>
                </tr>
            }
        </tbody>
    </table>
}
<script>
    $(document).ready(function () {
        $('#giftTable').DataTable({
            "pageLength": 10, // Số mục trên mỗi trang
            "lengthMenu": [10, 25, 50, 100], // Các tùy chọn cho người dùng chọn
            "language": {
                "search": "Tìm kiếm:", // Thay đổi nhãn tìm kiếm
                "lengthMenu": "Hiển thị _MENU_ mục",
                "info": "Hiển thị _START_ đến _END_ của _TOTAL_ mục",
                "paginate": {
                    "first": "Đầu tiên",
                    "last": "Cuối cùng",
                    "next": "Tiếp theo",
                    "previous": "Trước đó"
                }
            }
        });
    });
</script>